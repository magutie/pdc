{
    "name": "patriotas-del-caribe/website",
    "description": "Sitio web oficial de la Fundación Patriotas del Caribe - Apoyo a migrantes cubanos en República Dominicana",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Fundación Patriotas del Caribe",
            "email": "contacto@patriotasdelcaribe.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "phpmailer/phpmailer": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "graham-campbell/result-type": "^1.1",
        "phpoption/phpoption": "^1.9",
        "symfony/polyfill-ctype": "^1.27",
        "symfony/polyfill-mbstring": "^1.27",
        "symfony/polyfill-php80": "^1.27"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "PatriotasDelCaribe\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PatriotasDelCaribe\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
